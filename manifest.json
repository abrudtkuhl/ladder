{
  "manifest_version": 2,

  "name": "Ladder",
  "description": "Hoist yourself over annoying paywalls",
  "version": "0.1",

  "permissions": [
    "storage", "cookies", "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["lib/jquery-1.10.2.min.js", "lib/URI.min.js", "background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/", "https://*/"],
    "js": ["lib/jquery-1.10.2.min.js", "lib/URI.min.js", "hide.js"]
  }]
}